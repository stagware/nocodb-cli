{
  "name": "nocodb-cli-monorepo",
  "private": true,
  "version": "0.1.6",
  "packageManager": "npm@11",
  "workspaces": [
    "packages/sdk",
    "packages/cli"
  ],
  "scripts": {
    "build": "npm --prefix packages/sdk run build && npm --prefix packages/cli run build",
    "dev": "npm --prefix packages/cli run dev --",
    "lint": "npm --prefix packages/sdk run lint && npm --prefix packages/cli run lint",
    "test": "npm --prefix packages/sdk run test && npm --prefix packages/cli run test",
    "e2e": "node scripts/e2e-cli.mjs",
    "bump": "node scripts/bump-version.mjs"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.0",
    "eslint": "^10.0.0",
    "fast-check": "^4.5.3",
    "typescript-eslint": "^8.56.0"
  },
  "overrides": {
    "@typescript-eslint/typescript-estree": {
      "minimatch": "^10.2.1"
    },
    "eslint": {
      "ajv": "^8.18.0"
    }
  }
}
